    <script>
        // Before/After Comparison Slider
        const presetComparison = document.getElementById('presetComparison');
        const presetDivider = document.getElementById('presetDivider');
        let isDragging = false;

        presetDivider.addEventListener('mousedown', function(e) {
            isDragging = true;
            presetDivider.style.transition = 'none';
            document.body.style.cursor = 'ew-resize';
        });

        document.addEventListener('mousemove', function(e) {
            if (!isDragging) return;
            
            const containerRect = presetComparison.getBoundingClientRect();
            let xPosition = e.clientX - containerRect.left;
            
            // Keep within bounds
            xPosition = Math.max(0, Math.min(xPosition, containerRect.width));
            
            const percentage = (xPosition / containerRect.width) * 100;
            
            presetDivider.style.left = percentage + '%';
            document.querySelector('.preset-after').style.width = percentage + '%';
        });

        document.addEventListener('mouseup', function() {
            isDragging = false;
            presetDivider.style.transition = 'left 0.1s ease';
            document.body.style.cursor = '';
        });

        // Make category cards clickable
        document.querySelectorAll('.category-card').forEach(card => {
            card.addEventListener('click', function() {
                const category = this.getAttribute('onclick').match(/'([^']+)'/)[1];
                window.location.href = category;
            });
        });

        // Make creator cards clickable
        document.querySelectorAll('.creator-card').forEach(card => {
            card.addEventListener('click', function() {
                const creatorUrl = this.getAttribute('onclick').match(/'([^']+)'/)[1];
                window.location.href = creatorUrl;
            });
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
